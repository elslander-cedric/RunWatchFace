<layout id="WatchFace" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">
    <drawable id="battery_icon" class="Battery"/>
    
    <label id="date" x="center" y="50" font="Graphics.FONT_SYSTEM_TINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
    <label id="hour" font="Graphics.FONT_SYSTEM_NUMBER_MEDIUM" justification="Graphics.TEXT_JUSTIFY_RIGHT" color="Graphics.COLOR_YELLOW" />
    <label id="min" font="Graphics.FONT_SYSTEM_NUMBER_MEDIUM" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />
        
    <label id="activity_left" font="Graphics.FONT_SYSTEM_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER"/>
    <label id="activity_middle" font="Graphics.FONT_SYSTEM_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER"/>
    <label id="activity_right" font="Graphics.FONT_SYSTEM_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER"/>
    
    <label id="distance_status" x="center" y="158" font="Graphics.FONT_SYSTEM_SMALL" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    
    <drawable id="progress_year" class="Progress">
        <param name="type">"year"</param>
        <param name="radius">(dc.getWidth() / 2) - 4</param>
    </drawable>
    <drawable id="progress_month" class="Progress">
        <param name="type">"month"</param>
        <param name="radius">(dc.getWidth() / 2) - 10</param>
    </drawable>
    <drawable id="progress_week" class="Progress">
        <param name="type">"week"</param>
        <param name="radius">(dc.getWidth() / 2) - 16</param>
    </drawable>
</layout>